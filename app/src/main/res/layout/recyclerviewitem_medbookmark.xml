<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    >

    <ImageView
        android:id="@+id/medicineImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/dummy_panadol_extra"
        />

    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="@id/medicineImageView"
        app:layout_constraintBottom_toBottomOf="@id/medicineImageView"
        app:layout_constraintStart_toStartOf="@id/medicineImageView"
        app:layout_constraintEnd_toEndOf="@id/medicineImageView"
        android:background="@drawable/background_bookmarkitemlist"
        />

    <TextView
        android:id="@+id/medicineNameText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="PANADOL EXTRA"
        style="@style/CustomeStyle.Text.Bold.White"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="25sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>