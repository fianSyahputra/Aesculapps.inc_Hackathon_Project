<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/medicineConsumptionTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:text="13.00"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="@id/medicineConsumptionTimeTextView"
        app:layout_constraintEnd_toStartOf="@id/medicineConsumptionStatusTextView"
        app:layout_constraintTop_toTopOf="@id/medicineConsumptionTimeTextView"
        app:layout_constraintBottom_toBottomOf="@id/medicineConsumptionTimeTextView"
        android:background="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        />

        />
    <TextView
        android:id="@+id/medicineConsumptionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="Sudah"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_medicineToTake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/medicineConsumptionTimeTextView"


        />



</androidx.constraintlayout.widget.ConstraintLayout>