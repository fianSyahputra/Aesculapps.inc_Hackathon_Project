<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >




    <ImageView
        android:id="@+id/newsImageView"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/newsTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/newsImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/newsImageView"
        app:layout_constraintBottom_toBottomOf="@id/newsImageView"
        app:layout_constraintVertical_bias=".2"
        android:layout_marginStart="10dp"

        android:text="Judul Berita"
        style="@style/CustomeStyle.Text.Bold.Black"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/newsDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/newsImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newsTitleText"
        app:layout_constraintBottom_toBottomOf="@id/newsImageView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/lorem_ipsum_30"
        android:textSize="12sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>